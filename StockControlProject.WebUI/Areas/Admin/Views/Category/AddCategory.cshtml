@{
    ViewData["Title"] = "AddCategory";
}

@model Category
<div class="animated fadeIn">

    <div class="row">
        <div class="offset-3 col-lg-6">
            <div class="card">
                <div class="card-header text-center">
                    <strong class="card-title">Add Category</strong>
                </div>
                <div class="card-body">
                    <!-- Category -->
                    <div id="pay-invoice">
                        <div class="card-body">
                            <hr>
                            <form asp-area="Admin" asp-action="AddCategory" asp-controller="Category" method="post" novalidate="novalidate">
                                <div class="form-group">
                                    <label asp-for="CategoryName" class="control-label mb-1">Category Name</label>
                                    <input asp-for="CategoryName" type="text" data-val-required="Please enter a category name."class="form-control" aria-required="true" aria-invalid="false" value="">
                                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                                </div>
                                <div class="form-group has-success">
                                    <label asp-for="Description" class="control-label mb-1">Description</label>
                                    <input asp-for="Description" type="text" class="form-control cc-name valid" data-val="true" data-val-required="Please enter a description of the category." aria-required="true" aria-invalid="false" aria-describedby="cc-name">
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                    <span class="help-block field-validation-valid" data-valmsg-for="cc-name" data-valmsg-replace="true"></span>
                                </div>

                                <div>
                                    <button id="payment-button" type="submit" class="btn btn-lg btn-info btn-block">
                                        <i class="fa fa-plus fa-lg"></i>&nbsp;
                                        <span id="payment-button-amount">Add</span>
                                        <span id="payment-button-sending" style="display:none;">Adding…</span>
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>

                </div>
            </div> <!-- .card -->

        </div><!--/.col-->
    </div>
</div><!-- .animated -->

@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
}
