@{
    ViewData["Title"] = "Index";
}
@*template/tables-data'dan content kısmını aldım.Renderbody orası.*@
@model List<Category>

<div class="animated fadeIn">
    <div class="row">

        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <strong class="card-title">Category List</strong>
                </div>
                <div class="card-body">
                    <table id="bootstrap-data-table" class="table table-striped table-hover table-bordered">
                        <thead>
                            <tr>
                                <th>Category Name</th>
                                <th>Category Description</th>
                                <th>Status</th>
                                <th>Operations</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Category item in Model)
                            {
                                @if (item.IsActive)
                                {
                                    <tr>
                                        <td>@item.CategoryName</td>
                                        <td>@item.Description</td>
                                        <td class="bg-success text-white">
                                            <span>Active</span>
                                        </td>
                                       
                                        <td>
                                            <a asp-area="Admin" asp-controller="Category" asp-action="UpdateCategory" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                                <i class="fa fa-edit"></i>&nbsp;Update
                                            </a>
                                            <a asp-area="Admin" asp-controller="Category" asp-action="DeleteCategory" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                                <i class="fa fa-trash-o"></i>&nbsp;Delete
                                            </a></td>
                                    </tr>
                                }
                               else
                                {
                                    <tr>
                                        <td>@item.CategoryName</td>
                                        <td>@item.Description</td>
                                        <td class="bg-danger text-white">
                                          <span>Passive</span>
                                        </td>
                                        <td>
                                              <a asp-area="Admin" asp-controller="Category" asp-action="UpdateCategory" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                               <i class="fa fa-edit"></i>&nbsp;Update
                                            </a>
                                            <a asp-area="Admin" asp-controller="Category" asp-action="ActivateCategory" asp-route-id="@item.Id" class="btn btn-success btn-sm">
                                                <i class="fa fa-check-square-o"></i>&nbsp;Activate
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div><!-- .animated -->
@section Css {
    <link rel="stylesheet" href="~/template/assets/css/lib/datatable/dataTables.bootstrap.min.css">
}

@section Scripts {


    <script src="~/template/assets/js/lib/data-table/datatables.min.js"></script>
    <script src="~/template/assets/js/lib/data-table/dataTables.bootstrap.min.js"></script>
    <script src="~/template/assets/js/lib/data-table/dataTables.buttons.min.js"></script>
    <script src="~/template/assets/js/init/datatables-init.js"></script>


    <script type="text/javascript">
        $(document).ready(function () {
            $('#bootstrap-data-table-export').DataTable();
        });
    </script>

}
